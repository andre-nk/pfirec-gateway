{
  "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
  "version": 3,
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/opencensus": {
      "sample_rate": 10,
      "reporting_period": 5,
      "enabled_layers": {
        "backend": true,
        "router": true,
        "pipe": false
      },
      "exporters": {
        "stackdriver": {
          "project_id": "pfirec-db",
          "metric_prefix": "krakend",
          "default_labels": {
            "service": "pfirec-gateway",
            "environment": "production"
          }
        }
      }
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[GATEWAY]",
      "syslog": false,
      "stdout": true,
      "format": "json"
    },
    "router": {
      "return_error_msg": true,
      "hide_version_header": true,
      "auto_options": true
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "OPTIONS"],
      "allow_headers": ["Authorization", "Content-Type", "X-GitHub-Token"],
      "expose_headers": ["X-Request-Id"],
      "max_age": "12h",
      "allow_credentials": false
    },
    "security/http": {
      "allowed_hosts": [],
      "ssl_redirect": false,
      "frame_deny": true,
      "content_type_nosniff": true,
      "browser_xss_filter": true,
      "content_security_policy": "default-src 'self'",
      "referrer_policy": "strict-origin-when-cross-origin"
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/recommendation/authenticated",
      "method": "POST",
      "input_headers": [
        "Authorization",
        "X-GitHub-Token",
        "X-User-ID",
        "Content-Type"
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 30,
          "client_max_rate": 30,
          "strategy": "ip",
          "key": "X-User-ID"
        },
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "${CLERK_JWK_URL}",
          "issuer": "${CLERK_ISSUER}",
          "audience": [],
          "disable_jwk_security": true,
          "propagate_claims": [["sub", "X-User-ID"]]
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Invalid request: 'repo_url' must be a valid GitHub URL, 'username' must follow GitHub rules"
        }
      },
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/v1/recommendation",
          "method": "POST",
          "host": ["${TASK_MANAGER_HOST}"],
          "encoding": "no-op",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/recommendation/anonymous",
      "method": "POST",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 20,
          "client_max_rate": 20,
          "strategy": "ip"
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Invalid request: 'repo_url' must be a valid GitHub URL, 'username' must follow GitHub rules"
        }
      },
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/v1/recommendation",
          "method": "POST",
          "host": ["${TASK_MANAGER_HOST}"],
          "encoding": "no-op",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    }
  ]
}

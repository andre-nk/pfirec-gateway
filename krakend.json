{
  "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
  "version": 3,
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 1,
      "enabled_layers": {
        "backend": true,
        "router": true,
        "pipe": true
      },
      "exporters": {
        "stackdriver": {
          "project_id": "pfirec-db",
          "metric_prefix": "krakend",
          "default_labels": {
            "service": "pfirec-gateway"
          }
        }
      }
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "json"
    },
    "security/http": {
      "allowed_hosts": [],
      "ssl_redirect": false,
      "frame_deny": true,
      "content_type_nosniff": true,
      "browser_xss_filter": true,
      "content_security_policy": "default-src 'self'"
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/recommendation/authenticated",
      "method": "POST",
      "input_headers": ["Authorization", "X-GitHub-Token", "Content-Type"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://keen-mammoth-21.clerk.accounts.dev/.well-known/jwks.json",
          "issuer": "https://keen-mammoth-21.clerk.accounts.dev",
          "audience": [],
          "disable_jwk_security": true,
          "propagate_claims": [["sub", "X-User-ID"]]
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Bad Request: Invalid request body. Please ensure 'repo_url' is a valid GitHub repository URL (e.g., https://github.com/owner/repo), 'username' follows GitHub username rules, and 'tags' is an array of strings. Authenticated users are limited to 30 requests per 24 hours."
        }
      },
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/v1/recommendation",
          "method": "POST",
          "host": ["http://pfirec-task-manager:8080"],
          "encoding": "no-op",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/recommendation/anonymous",
      "method": "POST",
      "extra_config": {
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Bad Request: Invalid request body. Please ensure 'repo_url' is a valid GitHub repository URL (e.g., https://github.com/owner/repo), 'username' follows GitHub username rules, and 'tags' is an array of strings. Anonymous users are limited to 20 requests per 24 hours. For higher limits, use authenticated access."
        }
      },
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/v1/recommendation",
          "method": "POST",
          "host": ["http://pfirec-task-manager:8080"],
          "encoding": "no-op",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    }
  ]
}

{
  "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
  "version": 3,
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 1,
      "enabled_layers": {
        "backend": true,
        "router": true,
        "pipe": true
      },
      "exporters": {
        "stackdriver": {
          "project_id": "pfirec-db",
          "metric_prefix": "krakend",
          "default_labels": {
            "service": "pfirec-gateway"
          }
        }
      }
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "json"
    }
  },
  "endpoints": [
    {
      "endpoint": "/recommend/authenticated",
      "method": "POST",
      "input_headers": ["Authorization"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://YOUR_CLERK_DOMAIN/.well-known/jwks.json",
          "issuer": "https://YOUR_CLERK_DOMAIN",
          "audience": [],
          "roles_key": "org_roles",
          "propagate_claims": [["sub", "X-User-ID"]]
        },
        "qos/ratelimit/router": {
          "strategy": "header",
          "key": "Authorization",
          "max_rate": 30,
          "capacity": 30,
          "client_max_rate": 30,
          "every": "24h"
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Invalid request body. Please check the 'repo_url' format, 'username' (if provided), and other fields."
        }
      },
      "backend": [
        {
          "url_pattern": "/task",
          "method": "POST",
          "host": ["http://pfirec-task-manager:8080"]
        }
      ]
    },
    {
      "endpoint": "/recommend/anonymous",
      "method": "POST",
      "extra_config": {
        "qos/ratelimit/router": {
          "strategy": "ip",
          "max_rate": 5,
          "capacity": 5,
          "client_max_rate": 5,
          "every": "24h"
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["repo_url"],
          "properties": {
            "repo_url": {
              "type": "string",
              "pattern": "^https://github.com/([a-zA-Z0-9-]+)/([a-zA-Z0-9-._]+)$"
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50,
              "pattern": "^[a-zA-Z0-9-._]+$"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "message_on_error": "Invalid request body. Please check the 'repo_url' format and other fields."
        }
      },
      "backend": [
        {
          "url_pattern": "/task",
          "method": "POST",
          "host": ["http://pfirec-task-manager:8080"]
        }
      ]
    }
  ]
}
